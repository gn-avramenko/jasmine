<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://xtrip.gridnine.com/jasmine/ui" >
    <shared-editor-tool-button id="sharedSaveEditorButton" handler="com.gridnine.jasmine.web.sandbox.shared.SandboxSharedEditorSaveButtonHandler" weight="1" caption="buttonSave"/>
<!--    <shared-editor-tool-button id="sharedDeleteEditorButton" handler="stub" weight="2" caption="buttonDelete"/>-->
    <shared-list-tool-button id="sharedDeleteListButton" handler="com.gridnine.jasmine.web.sandbox.shared.SandboxSharedListDeleteButtonHandler" weight="2" caption="buttonDelete"/>

    <editor id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxComplexDocumentEditor" entity-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxComplexDocument">
        <editor-handler>com.gridnine.jasmine.server.sandbox.rest.SandboxComplexDocumentEditorHandler</editor-handler>
        <view>
            <table-layout>
                <column width="70"/>
                <column width="200"/>
                <column width="200"/>
                <column width="remaining"/>
                <tile id="generalTile" h_span="2" class-name="com.gridnine.jasmine.server.sandbox.model.ui.SandboxComplexDocumentGeneralTile" caption="general.caption">
                    <compact-view>
                        <view>
                            <table-layout>
                                <column width="70"/>
                                <column width="200"/>
                                <label id="stringPropertyLabel" caption="stringPropertyLabel.caption"/>
                                <text-box id="stringProperty"/>
                            </table-layout>
                        </view>
                    </compact-view>
                    <full-view>
                        <view>
                            <table-layout>
                                <column width="70"/>
                                <column width="200"/>
                                <column width="remaining"/>
                                <label id="stringPropertyLabel" caption="stringPropertyLabel.caption"/>
                                <text-box id="stringProperty"/>
                                <next-row/>
                                <label id="floatPropertyLabel" caption="floatPropertyLabel.caption"/>
                                <float-box id="floatProperty"/>
                                <next-row/>
                                <label id="integerPropertyLabel" caption="integerPropertyLabel.caption"/>
                                <integer-box id="integerProperty" nonNullable="true"/>
                                <next-row/>
                                <label id="booleanPropertyLabel" caption="booleanPropertyLabel.caption"/>
                                <boolean-box id="booleanProperty" nonNullable="true"/>
                                <next-row/>
                                <label id="entityPropertyLabel" caption="entityPropertyLabel.caption"/>
                                <entity-select id="entityProperty" entity-class-name="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccount"/>
                                <next-row/>
                                <label id="enumPropertyLabel" caption="enumPropertyLabel.caption"/>
                                <enum-select id="enumProperty" enum-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxEnum"/>
                                <next-row/>
                                <label id="datePropertyLabel" caption="datePropertyLabel.caption"/>
                                <date-box id="dateProperty"/>
                                <next-row/>
                                <label id="dateTimePropertyLabel" caption="dateTimePropertyLabel.caption"/>
                                <date-time-box id="dateTimeProperty"/>
                                <next-row/>
                                <label id="entityCollectionLabel" caption="entityCollectionLabel.caption"/>
                                <next-row/>
                                <table id="entityCollection" h_span="3" class-name="com.gridnine.jasmine.server.sandbox.model.ui.SandboxTable">
                                    <columns>
                                        <text-column id="textColumn" caption="textColumn.caption"/>
                                        <entity-select-column id="entityColumn" entity-class-name="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccount" caption="entityColumn.caption"/>
                                        <enum-select-column id="enumColumn" enum-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxEnum" caption="enumColumn.caption"/>
                                        <float-column id="floatColumn" caption="floatColumn.caption"/>
                                        <integer-column id="integerColumn" caption="integerColumn.caption"/>
                                    </columns>
                                </table>
                            </table-layout>
                        </view>
                    </full-view>
                </tile>
            </table-layout>
        </view>
    </editor>
    <editor id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxUserAccountEditor" entity-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccount">
        <toolbar>
            <tool-button id="updatePassword" handler="com.gridnine.jasmine.web.sandbox.userAccount.SandboxUpdatePasswordEditorToolButtonHandler" weight="2" caption="updatePassword"/>
        </toolbar>
        <editor-handler>com.gridnine.jasmine.server.sandbox.rest.SandboxUserAccountEditorHandler</editor-handler>
        <view>
            <table-layout>
                <column width="70"/>
                <column width="200"/>
                <column width="remaining"/>
                <label id="nameLabel" caption="nameLabel.caption"/>
                <text-box id="name"/>
                <next-row/>
                <label id="loginLabel" caption="loginLabel.caption"/>
                <text-box id="login" not-editable="true"/>
            </table-layout>
        </view>
    </editor>
    <dialog id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxLoginDialog" closable="false">
        <view>
            <table-layout>
                <column width="70"/>
                <column width="200"/>
                <label id="loginLabel" caption="loginLabel.caption"/>
                <text-box id="login" />
                <next-row/>
                <label id="passwordLabel" caption="passwordLabel.caption"/>
                <password-box id="password"/>
            </table-layout>
        </view>
        <buttons>
            <button id="loginButton" handler="com.gridnine.jasmine.web.sandbox.login.SandboxLoginButtonHandler" caption="loginButton"/>
        </buttons>
    </dialog>
    <dialog id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxCreateUserAccountDialog">
        <view>
            <table-layout>
                <column width="70"/>
                <column width="200"/>
                <label id="loginLabel" caption="loginLabel.caption"/>
                <text-box id="login" />
                <next-row/>
                <label id="passwordLabel" caption="passwordLabel.caption"/>
                <password-box id="password"/>
                <next-row/>
                <label id="passwordRepeatLabel" caption="passwordRepeatLabel.caption"/>
                <password-box id="passwordRepeat"/>
            </table-layout>
        </view>
        <buttons>
            <button id="createButton" handler="com.gridnine.jasmine.web.sandbox.userAccount.SandboxCreateUserAccountDialogButtonHandler" caption="createButton"/>
        </buttons>
    </dialog>
    <dialog id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxUpdatePasswordDialog">
        <view>
            <table-layout>
                <column width="70"/>
                <column width="200"/>
                <label id="oldPasswordLabel" caption="oldPassword.caption"/>
                <text-box id="oldPassword" />
                <next-row/>
                <label id="newPasswordLabel" caption="newPasswordLabel.caption"/>
                <password-box id="password"/>
                <next-row/>
                <label id="passwordRepeatLabel" caption="passwordRepeatLabel.caption"/>
                <password-box id="passwordRepeat"/>
            </table-layout>
        </view>
        <buttons>
            <button id="updatePassword" handler="com.gridnine.jasmine.web.sandbox.userAccount.SandboxUpdatePasswordDialogButtonHandler" caption="update"/>
        </buttons>
    </dialog>
    <list id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxUserAccountList" object-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccountIndex">
        <toolbar>
            <tool-button id="createButton" handler="com.gridnine.jasmine.web.sandbox.userAccount.SandboxCreateUserAccountListToolButtonHandler" weight="2" caption="createButton"/>
        </toolbar>
    </list>
    <list id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxComplexDocumentList" object-id="com.gridnine.jasmine.server.sandbox.model.domain.SandboxComplexDocumentIndex">

    </list>
    <validation-messages id="com.gridnine.jasmine.server.sandbox.model.ui.SandboxValidationMessages">
        <message id="WRONG_LOGIN"/>
        <message id="WRONG_PASSWORD"/>
        <message id="LOGIN_ALREADY_EXISTS"/>
        <message id="PASSWORDS_DIFFERS"/>
    </validation-messages>
    <autocomplete id="sandbox-user-account" entity="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccountIndex">
        <columns>
            <column>login</column>
            <column>name</column>
        </columns>
        <sortOrder property="login" order="ASC"/>
    </autocomplete>
    <autocomplete id="sandbox-complex-document" entity="com.gridnine.jasmine.server.sandbox.model.domain.SandboxComplexDocumentIndex">
        <columns>
            <column>stringProperty</column>
            <column>enumProperty</column>
        </columns>
        <sortOrder property="stringProperty" order="ASC"/>
    </autocomplete>
</ui>