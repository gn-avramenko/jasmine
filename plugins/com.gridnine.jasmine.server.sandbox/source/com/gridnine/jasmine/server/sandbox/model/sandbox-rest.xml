<?xml version="1.0" encoding="UTF-8"?>
<rest xmlns="http://xtrip.gridnine.com/jasmine/rest" id="sandbox">
    <group id="auth">
        <operation id="checkAuth" handler="com.gridnine.jasmine.server.sandbox.rest.SandboxCheckAuthHandler">
            <request id="com.gridnine.jasmine.server.sandbox.model.rest.CheckAuthRequest"/>
            <response id="com.gridnine.jasmine.server.sandbox.model.rest.CheckAuthResponse">
                <property id="authorized" type="BOOLEAN"/>
            </response>
        </operation>
        <operation id="login" handler="com.gridnine.jasmine.server.sandbox.rest.SandboxLoginHandler">
            <request id="com.gridnine.jasmine.server.sandbox.model.rest.LoginRequest">
                <property id="data" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxLoginDialogVM"/>
            </request>
            <response id="com.gridnine.jasmine.server.sandbox.model.rest.LoginResponse">
                <property id="validation" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxLoginDialogVV"/>
                <property id="successfull" type="BOOLEAN"/>
            </response>
        </operation>
        <operation id="logout" handler="com.gridnine.jasmine.server.sandbox.rest.SandboxLogoutHandler">
            <request id="com.gridnine.jasmine.server.sandbox.model.rest.LogoutRequest"/>
            <response id="com.gridnine.jasmine.server.sandbox.model.rest.LogoutResponse"/>
        </operation>
    </group>
    <group id="userAccount">
        <operation id="createAccount" handler="com.gridnine.jasmine.server.sandbox.rest.SandboxCreateUserAccountHandler">
            <request id="com.gridnine.jasmine.server.sandbox.model.rest.SandboxCreateUserAccountRequest">
                <property id="model" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxCreateUserAccountDialogVM" lateinit="true"/>
            </request>
            <response id="com.gridnine.jasmine.server.sandbox.model.rest.SandboxCreateUserAccountResponse">
                <property id="validation" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxCreateUserAccountDialogVV" lateinit="true"/>
                <property id="result" type="ENTITY_REFERENCE" className="com.gridnine.jasmine.server.sandbox.model.domain.SandboxUserAccount"/>
            </response>
        </operation>
        <operation id="updatePassword" handler="com.gridnine.jasmine.server.sandbox.rest.SandboxUpdatePasswordHandler">
            <request id="com.gridnine.jasmine.server.sandbox.model.rest.SandboxUpdatePasswordRequest">
                <property id="login" type="STRING"/>
                <property id="model" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxUpdatePasswordDialogVM" lateinit="true"/>
            </request>
            <response id="com.gridnine.jasmine.server.sandbox.model.rest.SandboxUpdatePasswordResponse">
                <property id="validation" type="ENTITY" className="com.gridnine.jasmine.server.sandbox.model.ui.SandboxUpdatePasswordDialogVV" lateinit="true"/>
            </response>
        </operation>
    </group>
</rest>


